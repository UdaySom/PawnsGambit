{
  "kind": "collectionType",
  "collectionName": "community_members",
  "info": {
    "singularName": "community-member",
    "pluralName": "community-members",
    "displayName": "Community Member",
    "description": "Community member profiles"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "username": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "bio": {
      "type": "richtext"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "rating": {
      "type": "integer",
      "default": 1000
    },
    "joinDate": {
      "type": "date",
      "required": true
    },
    "achievements": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::achievement.achievement",
      "inversedBy": "members"
    },
    "totalGames": {
      "type": "integer",
      "default": 0
    },
    "wins": {
      "type": "integer",
      "default": 0
    },
    "socialLinks": {
      "type": "json"
    }
  }
}

